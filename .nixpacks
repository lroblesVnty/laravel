{
  "phases": {
    "install": {
      "cmds": [
        "composer install --no-dev --no-interaction --prefer-dist",
        "php artisan migrate --force",
        "php artisan db:seed --force",
        "php artisan config:cache",
        "php artisan route:cache",
        "php artisan view:cache"
      ]
    },
    "start": {
      "cmds": [
        "chmod +x ./run-cron.sh",
        "./run-cron.sh &",
        "php -S 0.0.0.0:8080 -t public"
      ]
    }
  }
}
